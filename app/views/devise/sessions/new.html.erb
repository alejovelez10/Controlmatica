    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
             <img src="http://controlmatica.com.co/images/controlmatica/controlmatica-logo-03.png">
              <div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", class: "form-control" %>
              </div>
              <div>
                <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Contraseña", class: "form-control" %>
              </div>
              <div>
                <%= f.submit "Log in", class: "btn btn-default submit" %>
                <a class="reset_pass" href="#">Lost your password?</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">New to site?
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Crear Cuenta", new_registration_path(resource_name) %><br />
                  <% end -%>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
              
                  <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                </div>
              </div>
           <% end %>
          </section>
        </div>
      </div>
    </div>