

   <div>
      <div class="login_wrapper">
        <%if notice.present? %>
          <div class="container" style="margin-bottom: 50px">
              <div class="col-md-12" style="padding: 0;">
                <div id="notice" class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <%= notice %>
                
                </div>
              
              </div>
            </div>
          <%end%>
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "contact_form"}) do |f| %>
             <img src="http://controlmatica.com.co/images/controlmatica/controlmatica-logo-03.png">
              <div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", class: "form-control" %>
              </div>
              <div>
                <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Contraseña", class: "form-control" %>
              </div>
              <div>
                <%= f.submit "Ingresar", class: "btn btn-dark" %>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Olvidaste tu Contraseña?", new_password_path(resource_name), class: "reset_pass" %><br />
                <% end -%>
              </div>

              <div class="clearfix"></div>

              <div class="separator" style="display: none;">
                <p class="change_link">Eres Nuevo?
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Crear Tu Cuenta", new_registration_path(resource_name) %><br />
                  <% end -%>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
              
                  <p>©2019 Controlmatica Todos Los Derechos Reservados.</p>
                </div>
              </div>
           <% end %>
          </section>
        </div>
      </div>
    </div>