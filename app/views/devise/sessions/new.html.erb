
<section class="login-fullscreen">
  <div class="login-glass-card">
    <% if notice.present? %>
      <div class="login-alert login-alert-warning"><%= notice %></div>
    <% end %>
    <% if alert.present? %>
      <div class="login-alert login-alert-danger"><%= alert %></div>
    <% end %>

    <div class="login-avatar">
      <img src="http://controlmatica.com.co/images/controlmatica/controlmatica-logo-03.png" alt="Controlmatica">
    </div>
    <h1 class="login-title">Iniciar Sesión</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-glass-form" }) do |f| %>
      <div class="login-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input", placeholder: "Email" %>
      </div>
      <div class="login-field">
        <%= f.password_field :password, autocomplete: "current-password", class: "login-input", placeholder: "Contraseña" %>
      </div>
      <div class="login-actions">
        <%= f.submit "Ingresar", class: "login-btn" %>
      </div>
      <div class="login-links">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <span>Olvidó su contraseña? <%= link_to "Click aquí", new_password_path(resource_name), class: "login-link" %></span>
        <% end %>
      </div>
    <% end %>
    <p class="login-tagline">Plataforma de gestión de proyectos</p>
  </div>
</section>
