    <div>
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <% if devise_error_messages!.present? %>
            <div class="container" style="margin-bottom: 50px">
                <div class="col-md-12" style="padding: 0;">
                  <div id="notice" class="alert alert-danger alert-dismissible">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= devise_error_messages! %>
                  
                  </div>
                
                </div>
              </div>
          <% end %>
			

             <img src="http://controlmatica.com.co/images/controlmatica/controlmatica-logo-03.png">
				  <div class="col-md-12 p-0 text-left">
				    <label>Ingresar email</label><br />
				    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form form-control" %>
				  </div>
              <div>
                <%= f.submit "Enviar", class: "btn btn-dark" %>
					<%- if controller_name != 'sessions' %>
					  <%= link_to "Volver", new_session_path(resource_name) %><br />
					<% end -%>
              </div>

              <div class="clearfix"></div>

              <div class="separator" style="display: none;">
                <p class="change_link">Eres Nuevo?
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Crear Tu Cuenta", new_registration_path(resource_name) %><br />
                  <% end -%>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
              
                  <p>Â©2019 Controlmatica Todos Los Derechos Reservados.</p>
                </div>
              </div>
           <% end %>
          </section>
        </div>
      </div>
    </div>



