
<% if devise_error_messages!.present? %>
  <div class="login-notice">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= devise_error_messages! %>
    </div>
  </div>
<% end %>

<section class="login-fullscreen">
  <div class="login-glass-card">
    <div class="login-avatar">
      <img src="http://controlmatica.com.co/images/controlmatica/controlmatica-logo-03.png" alt="Controlmatica">
    </div>
    <h1 class="login-title">Recuperar Contrase√±a</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-glass-form" }) do |f| %>
      <div class="login-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input", placeholder: "Email" %>
      </div>
      <div class="login-actions">
        <%= f.submit "Enviar", class: "login-btn" %>
      </div>
      <div class="login-links">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Volver al inicio", new_session_path(resource_name), class: "login-link" %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
