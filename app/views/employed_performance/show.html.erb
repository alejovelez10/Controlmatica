<%
   if params[:view] == "tableristas"
      rol = Rol.find_by_name("TABLERISTA")
      users = rol ? User.where(rol_id: rol.id) : User.none
      title = "Tableristas"
      icon = "fas fa-tools"
      subtitle = "Genera informes de rendimiento del personal de tableristas"
   else
      title = "Ingenieros"
      icon = "fas fa-user-tie"
      subtitle = "Genera informes de rendimiento del equipo de ingeniería"
      users = User.all
   end
%>

<div class="cm-performance-container">
  <div class="cm-performance-card">
    <div class="cm-performance-header">
      <div class="cm-performance-icon">
        <i class="<%= icon %>"></i>
      </div>
      <h1 class="cm-performance-title">Informe de Rendimiento</h1>
      <span class="cm-performance-badge"><%= title %></span>
      <p class="cm-performance-subtitle"><%= subtitle %></p>
    </div>

    <div class="cm-performance-body">
      <%= form_tag info_pdf_new_path(format: :pdf), method: :get, class: "cm-performance-form" do %>

        <% if @validate %>
          <div class="cm-form-group">
            <label class="cm-label">
              <i class="fas fa-user"></i> Empleado
            </label>
            <%= select_tag 'user_id',
                options_for_select(users.collect{ |u| [u.names, u.id] }),
                class: "cm-input cm-select",
                prompt: 'Seleccione un empleado',
                required: true %>
          </div>
        <% else %>
          <%= hidden_field_tag :user_id, current_user.id %>
        <% end %>

        <%= hidden_field_tag :view, params[:view] %>

        <div class="cm-form-row-2">
          <div class="cm-form-group">
            <label class="cm-label">
              <i class="fas fa-calendar-alt"></i> Fecha desde
            </label>
            <%= date_field_tag :fecha_desde, nil, class: "cm-input", required: true %>
          </div>

          <div class="cm-form-group">
            <label class="cm-label">
              <i class="fas fa-calendar-alt"></i> Fecha hasta
            </label>
            <%= date_field_tag :fecha_hasta, nil, class: "cm-input", required: true %>
          </div>
        </div>

        <div class="cm-form-actions">
          <%= button_tag formtarget: "_blank", class: "cm-btn cm-btn-accent cm-btn-lg", disabled: false do %>
            <i class="fas fa-file-pdf"></i> Generar Informe
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="cm-performance-footer">
      <i class="fas fa-info-circle"></i>
      El informe se generará en formato PDF en una nueva pestaña
    </div>
  </div>
</div>

<style>
