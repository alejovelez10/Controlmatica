<div class="row">
	<div class="col-md-12">
     <h3 class="text-center mb-4">INFORME DE RENDIMIENTO <%= current_user.names.upcase if current_user.rol_user == "Ingeniero"%></h3></div>

      <div class="col-md-4 offset-md-4">
         <div class="card card-table">
            <div class="card-body">
               <%= form_tag info_pdf_path(format: :pdf),  method: :get  do%>

               <% if @validate %>
                  <div class="form-group">   
                     <label>Seleccione Empleado</label>
                     <%= select_tag 'user_id', options_for_select(User.all.collect{ |u| [u.names, u.id] }),{:class => "form1 form form-control", :prompt => 'Selecciona un Empleado', id: "", :required => true}%>
                  </div>
               <% else %>
                  <%= hidden_field_tag :user_id, current_user.id %>
               <% end %>

               <div class="form-group">
                  <label>Seleccione Desde</label>
                  <%= date_field_tag :fecha_desde,nil ,class: "form form-control", :required => true%>
               </div>
               
               <div class="form-group">
                  <label>Seleccione Fecha Hasta</label>
                  <%= date_field_tag :fecha_hasta,nil, class: "form form-control", :required => true%>
               </div>
                  <%= button_tag "Generar", :formtarget => "_blank" , class: "btn btn-secondary btn-lg btn-block", disabled: false %>
               <% end %>
            </div>
         </div>
      </div>

   </div>
</div>
