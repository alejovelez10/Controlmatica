<div class="row">
	<div class="col-md-12"><h3>INFORME DE RENDIMIENTO</h3></div>
   <div class="col-md-4 offset-md-4">
      <%= form_tag info_pdf_path(format: :pdf),  method: :get  do%>
      <div class="form-group">
         <label>Seleccione Empleado</label>
         <%= select_tag 'user_id', options_for_select(User.all.collect{ |u| [u.names, u.id] }),{:class => "form1 form form-control", :prompt => 'Selecciona un Empleado', id: "", :required => true}%>
      </div>
      <div class="form-group">
         <label>Seleccione Desde</label>
         <%= date_field_tag :fecha_desde,nil ,class: "form form-control"%>
      </div>
      <div class="form-group">
         <label>Seleccione Fecha Hasta</label>
         <%= date_field_tag :fecha_hasta,nil, class: "form form-control"%>
      </div>
      <%= submit_tag "Generar", :formtarget => "_blank" , class: "btn btn-primary"%>
      <%end%>
   </div>
</div>