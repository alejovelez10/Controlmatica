//});

$(document).ready(function () {
    $('#datepicker').datepicker({
      uiLibrary: 'bootstrap'

    });
});

$(document).ready(function () {
    $('#datepicker1').datepicker({
      uiLibrary: 'bootstrap'
    });
});

$('#contact_form').validate();

</script>