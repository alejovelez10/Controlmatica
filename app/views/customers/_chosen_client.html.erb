<label>Contacto Cliente</label>
<select name="report[contact_id]" class="form chosen-select2 form-control contact">
	<% clients.where.not(customer_id: nil).each do |cliente| %>
		<option value="<%= cliente.id %>"><%= cliente.name %></option>
	<% end -%>
</select>

<script type="text/javascript">
	   $('.chosen-select2').chosen(
        {

          allow_single_deselect: true,
          no_results_text: 'No hay resultados',
          placeholder_text_single: "Seleccione una opci√≥n",
          placeholder_text_multiple: "Seleccione una varias opciones"

        });

        $('.contact').change(function(){

            id = $(this).val();
            console.log(id);

            $.get('/get_contact/' + id, function(data,status){
                console.log(id);
                
                $('#contact_name').val(data.name);
                $('#contact_email').val(data.email);
                $('#contact_phone').val(data.phone);
                $('#contact_position').val(data.position);

            })


        })

</script>