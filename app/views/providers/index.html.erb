<div class="x_content">

  <div class="container-fluid no-padding">

    <div class="col-md-8 no-paddong-left">
          <h1>Proveedores Creados</h1>
          <span class="count"><%= @providers.count %></span>
          <p id="count-pages"><%= page_providers_info @providers %></p>
    </div>

    <div class="col-md-4 float margin_top" >
          <%= link_to 'Nuevo Proveedor', new_provider_path, class: "btn btn-dark float" %>
    </div>

  </div>

  <div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Nit</th>
          <th>Web</th>
          <th>Email</th>
          <th>User</th>
          <th class="title">Acciones</th>
        </tr>
     </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.address %></td>
        <td><%= provider.nit %></td>
        <td><a class="web-page" href="<%= provider.web %>" target="_blank" title="Ir">Ver Pagina Web</a></td>
        <td><%= provider.email %></td>
        <td><%= provider.user_id %></td>
        <td>

            <%= link_to provider, class: "btn-padding" do %>
              <i class="far fa-eye"></i>
            <% end -%>

            <%= link_to edit_provider_path(provider), class: "btn-padding" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end -%>

            <%= link_to provider, method: :delete, data: {
              confirm: 'Â¿Estas Seguro?',
              'confirm-button-text': 'Borrar',
              'cancel-button-text': 'Cancelar',
              'confirm-button-color': '#CC0000',
               text: 'Recuerda que el registro se borrara permanentemente',
              'image-url': ''}, class: "btn-delete" do%>
              <span class="glyphicon glyphicon-trash"></span>
            <% end -%>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

